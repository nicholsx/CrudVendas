@model LojaNicholas.Models.Clientes

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro de Cliente</h1>
<hr />
<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CdCl" class="control-label"></label>
                <input asp-for="CdCl" class="form-control" />
                <span asp-validation-for="CdCl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DsNome" class="control-label"></label>
                <input asp-for="DsNome" class="form-control" />
