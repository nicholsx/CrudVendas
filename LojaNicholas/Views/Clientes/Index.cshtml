@model IEnumerable<LojaNicholas.Models.Clientes>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro Cliente</h1>

<p>
    <a asp-action="Create">Criar Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CdCl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DsNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdTipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CdVend)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DsLim)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CdCl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DsNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdTipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CdVend)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DsLim)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
